<?xml version='1.0' encoding='UTF-8' ?>
<dialogs>
  <window id='#PB_Any' name='main' text='Transport Fever Mod Manager' minwidth='780' minheight='480' flags='#PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_MaximizeGadget | #PB_Window_SizeGadget | #PB_Window_ScreenCentered | #PB_Window_Invisible'>
    <vbox expand='item:2' margin='0'>
      <singlebox margin='top:-8,left:-8,right:-8,bottom:0' comment='place headerMain directly at window bounds'>
        <image name='headerMain' height='8' />
      </singlebox>
      <singlebox margin='top:0,left:-5,right:-5,bottom:0' comment='reduce margin around panel'>
        <panel name='panel'>
          <tab text='Modifications'>
            <vbox expand='item:1'>
              <hbox expand='item:1'>
                <listicon name='modList' flags='#PB_ListIcon_MultiSelect | #PB_ListIcon_GridLines | #PB_ListIcon_FullRowSelect | #PB_ListIcon_AlwaysShowSelection' />
                <vbox expand='no'>
                  <frame name='modFilterFrame'>
                    <vbox expand='no'>
                      <hbox expand='item:1'>
                        <string name='modFilterString'/>
                        <button name='modFilterReset' text='X' />
                      </hbox>
                      <combobox name='modFilterFolder' />
                      <hbox expand='equal'>
                        <checkbox name='modFilterHidden' />
                        <checkbox name='modFilterVanilla' />
                      </hbox>
                    </vbox>
                  </frame>
                  <image name='modPreviewImage' width='240' height='135' />
                  <frame name='modManagementFrame'>
                    <vbox expand='no'>
                      <button name='modInformation' />
                      <button name='modBackup' />
                      <button name='modUninstall' />
                    </vbox>
                  </frame>
                </vbox>
              </hbox>
            </vbox>
          </tab>
          <tab text='Online Repositories'>
            <vbox expand='item:1'>
              <hbox expand='item:1'>
                <listicon name='repoList' flags=' #PB_ListIcon_GridLines | #PB_ListIcon_FullRowSelect | #PB_ListIcon_AlwaysShowSelection' />
                <vbox expand='no'>
                  <frame name='repoFilterFrame'>
                    <vbox expand='no'>
                      <combobox name='repoFilterSources' />
                      <combobox name='repoFilterTypes' />
                      <combobox name='repoFilterInstalled' />
                      <hbox expand='item:1'>
                        <string name='repoFilterString'/>
                        <button name='repoFilterReset' text='X' />
                      </hbox>
                    </vbox>
                  </frame>
                  <frame name='repoManagementFrame'>
                    <vbox expand='no'>
                      <button name='repoWebsite' />
                      <button name='repoInstall' />
                    </vbox>
                  </frame>
                  <image name='repoPreviewImage' width='210' height='118' />
                </vbox>
              </hbox>
            </vbox>
          </tab>
        </panel>
      </singlebox>
      <hbox expand='item:1' spacing='10'>
        <gridbox columns='3' colexpand='equal' rowexpand='no'>
        <text name='progressRepoText' text=' ' flags='#PB_Text_Right' />
          <progressbar name='progressRepoBar' min='0' max='100' value='0' invisible='yes' colspan='2' />
          <text name='progressModText' text=' ' flags='#PB_Text_Right' />
          <progressbar name='progressModBar' min='0' max='100' value='0' invisible='yes' colspan='2' />
        </gridbox>
        <vbox expand='item:1'>
          <empty />
          <text name='version' flags='#PB_Text_Right' />
        </vbox>
      </hbox>
      <singlebox id='placeholder' margin='bottom:0' invisible='yes' comment='placeholder for menu and status bar'></singlebox>
    </vbox>
  </window>


  <window id='#PB_Any' name='selectFiles' text='Select File' minwidth='300' minheight='auto' flags='#PB_Window_SystemMenu | #PB_Window_Tool | #PB_Window_WindowCentered'>
    <vbox expand='no'>
      <text name='selectText' />

        <vbox expand='no' id='selectBox'>
        </vbox>

      <hbox expand='equal'>
        <button name='selectCancel' />
        <empty />
        <button name='selectDownload' />
      </hbox>
    </vbox>
  </window>


  <window id='#PB_Any' name='modInfo' text='mod info' minwidth='400' minheight='400' flags='#PB_Window_SystemMenu | #PB_Window_Tool | #PB_Window_WindowCentered'>
    <vbox expand='item:3' spacing='2'> <!-- item:3 = description -->
      <singlebox margin='top:-8,left:-8,right:-8,bottom:0'>
        <vbox colums='2' spacing='0' expand='no'>
          <canvas name='top' height='5' />
          <text name='name' text=' ' flags='#PB_Text_Center' />
          <canvas name='bar' height='6' />
        </vbox>
      </singlebox>
      <scrollarea scrolling='horizontal' innerheight='auto' innerwidth='auto' flags='#PB_ScrollArea_BorderLess'>
        <hbox id='infoBoxAuthors' expand='equal' spacing='15'>
        </hbox>
      </scrollarea>

      <frame name='descriptionLabel' text=' '>
        <editor name='description' text=' ' flags='#PB_Editor_WordWrap|#PB_Editor_ReadOnly' height='100' />
      </frame>
      <frame name='info' text=' '>
        <hbox expand='item:2'>
          <vbox expand='no'>
            <gridbox colexpand='item:2' rowexpand='no' columns='2'>
              <text name='uuidLabel' text=' ' />
              <text name='uuid' text=' ' />
              <text name='folderLabel' text=' ' />
              <hyperlink name='folder' text=' ' />
              <text name='tagsLabel' text=' ' />
              <text name='tags' text=' ' />
              <text name='dependenciesLabel' text=' ' />
              <hbox id='infoBoxDependencies' expand='no'></hbox>
              <text name='filesLabel' text=' '  invisible='yes'/>
              <text name='files' text=' ' invisible='yes' />
              <text name='sizeLabel' text=' ' invisible='yes' />
              <text name='size' text=' ' invisible='yes' />
            </gridbox>
          </vbox>
        </hbox>
      </frame>
      <empty />
      <hbox expand='item:2'>
        <text name='sourcesLabel' text=' '/>
        <hbox id='infoBoxSources' expand='no'></hbox>
      </hbox>
      <!--
        <hbox expand='item:1'>
          <empty />
          <button name='infoClose' text='Close' />
        </hbox>
      -->
    </vbox>
  </window>
</dialogs>
