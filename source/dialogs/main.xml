<?xml version='1.0' encoding='UTF-8' ?>
<dialogs>
  <window id='#PB_Any' name='main' text='Transport Fever Mod Manager' minwidth='800' minheight='550' flags='#PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_MaximizeGadget | #PB_Window_SizeGadget | #PB_Window_ScreenCentered | #PB_Window_Invisible'>
    <vbox expand='item:2' margin='0'>
      <singlebox margin='top:-8,left:-8,right:-8,bottom:0' comment='place headerMain directly at window bounds'>
        <image name='headerMain' height='8' />
      </singlebox>
      
      <singlebox margin='top:0,left:-5,right:-5,bottom:0' comment='reduce margin around panel'>
        <hbox expand='item:2'>
          <vbox expand='no' comment='nav-bar on left side'>
            <buttonimage name='btnMods' width='60' flags='#PB_Button_Toggle' />
            <buttonimage name='btnMaps' width='60' flags='#PB_Button_Toggle' />
            <buttonimage name='btnOnline' width='60' flags='#PB_Button_Toggle' />
            <buttonimage name='btnBackups' width='60' flags='#PB_Button_Toggle' />
            <buttonimage name='btnSettings' width='60' flags='#PB_Button_Toggle' />
          </vbox>
          <multibox comment='main content area'>
            <container name='containerMods' invisible='no' flags=''> <!--#PB_Container_Flat-->
              <hbox expand='item:1'>
                <canvas name='modList' flags='#PB_Canvas_Keyboard' />
                  
                <vbox expand='item:3'>
                  <hbox expand='no' align='center'>
                    <buttonimage name='modSort' />
                    <buttonimage name='modFilter' />
                  </hbox>
                  <vbox expand='no'>
                    <buttonimage name='modInfo' />
                    <buttonimage name='modUpdate' />
                    <buttonimage name='modBackup' />
                    <buttonimage name='modUninstall' />
                  </vbox>
                  <empty />
                  <vbox expand='no'>
                    <buttonimage name='modUpdateAll' />
                  </vbox>
                </vbox>
              </hbox>
            </container>
            
            <container name='containerMaps' invisible='yes'>
            </container>
            
            <container name='containerOnline' invisible='yes'>
              <vbox expand='item:1'>
                <hbox expand='item:1'>
                  <listicon name='repoList' flags=' #PB_ListIcon_GridLines | #PB_ListIcon_FullRowSelect | #PB_ListIcon_AlwaysShowSelection' />
                  <vbox expand='no'>
                    <frame name='repoFilterFrame' text=' '>
                      <vbox expand='no'>
                        <combobox name='repoFilterSources' />
                        <combobox name='repoFilterTypes' />
                        <combobox name='repoFilterInstalled' />
                        <hbox expand='item:1'>
                          <string name='repoFilterString' text=' '/>
                          <button name='repoFilterReset' text='X' />
                        </hbox>
                      </vbox>
                    </frame>
                    <frame name='repoManagementFrame' text=' '>
                      <vbox expand='no'>
                        <button name='repoWebsite' text=' ' />
                        <button name='repoInstall' text=' ' />
                      </vbox>
                    </frame>
                    <image name='repoPreviewImage' width='210' height='118' />
                  </vbox>
                </hbox>
              </vbox>
            </container>
            
            <container name='containerBackups' invisible='yes'>
              <hbox expand='item:1'>
                <vbox expand='item:1'>
                  <tree name='backupTree' flags='#PB_Tree_CheckBoxes|#PB_Tree_ThreeState' />
                  <hbox expand='item:2'>
                    <hbox expand='equal'>
                      <button name='backupExpand' text=' ' />
                      <button name='backupCollapse' text=' ' />
                      <button name='backupCheck' text=' ' />
                      <button name='backupClear' text=' ' />
                    </hbox>
                    <empty />
                  </hbox>
                </vbox>
                <vbox expand='no'>
                  <frame name='backupFrameFilter'>
                    <hbox expand='item:1'>
                      <string name='backupFilter' text=' ' />
                      <button name='backupFilterReset' text='X' />
                    </hbox>
                  </frame>
                  <frame name='backupFrame' text=' ' width='210'>
                    <vbox expand='no'>
                      <!--<button name='backupRefresh' text=' ' />-->
                      <button name='backupRestore' text=' ' />
                      <button name='backupDelete' text=' ' />
                      <button name='backupFolder' text=' ' />
                    </vbox>
                  </frame>
                </vbox>
              </hbox>
            </container>
            
          </multibox>
        </hbox>
        
      </singlebox>
      <hbox expand='item:1' spacing='10'>
        <gridbox columns='3' colexpand='equal' rowexpand='no'>
        <text name='progressRepoText' text=' ' flags='#PB_Text_Right' />
          <progressbar name='progressRepoBar' min='0' max='100' value='0' invisible='yes' colspan='2' />
          <text name='progressModText' text=' ' flags='#PB_Text_Right' />
          <progressbar name='progressModBar' min='0' max='100' value='0' invisible='yes' colspan='2' />
        </gridbox>
        <vbox expand='item:1'>
          <empty />
          <text name='version' text=' ' flags='#PB_Text_Right' />
        </vbox>
      </hbox>
      <singlebox id='placeholder' margin='bottom:0' invisible='yes' comment='placeholder for menu and status bar'></singlebox>
    </vbox>
  </window>


  <window id='#PB_Any' name='selectFiles' text='Select File' minwidth='300' minheight='auto' flags='#PB_Window_SystemMenu | #PB_Window_Tool | #PB_Window_WindowCentered'>
    <vbox expand='no'>
      <text name='selectText' />

        <vbox expand='no' id='selectBox'>
        </vbox>

      <hbox expand='equal'>
        <button name='selectCancel' />
        <empty />
        <button name='selectDownload' />
      </hbox>
    </vbox>
  </window>
  
  <window id='#PB_Any' name='modFilter' text='Filter Mods' flags='#PB_Window_Tool|#PB_Window_SystemMenu|#PB_Window_Invisible'>
    <vbox expand='no'>
      <hbox expand='item:1'>
        <string name='modFilterString' text='' />
        <button name='modFilterReset' text='X' />
      </hbox>
      <checkbox name='modFilterTF'       text='TF Mods' />
      <checkbox name='modFilterVanilla'  text='Vanilla Mods' />
      <checkbox name='modFilterHidden'   text='Hidden Mods' />
      <checkbox name='modFilterWorkshop' text='Steam Workshop Mods' />
      <checkbox name='modFilterStaging'  text='Staging Area Mods' />
    </vbox>
  </window>
  
  <window id='#PB_Any' name='modSort' text='Sort Mods' flags='#PB_Window_Tool|#PB_Window_SystemMenu|#PB_Window_Invisible'>
    <hbox expand='no'>
      <text name='modSortBy' text='Sort by' />
      <combobox name='modSortBox' width='100' />
    </hbox>
  </window>

</dialogs>
